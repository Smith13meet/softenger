<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.3.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_3_0.dtd">

<service-builder dependency-injector="ds" package-path="com.softenger.stocks">
	<namespace>Softenger</namespace>
	<entity local-service="true" name="Stock" remote-service="true" uuid="true">

		<!-- PK fields -->
		<column name="stockId" primary="true" type="long" />

		<!-- Group instance -->
		<column name="groupId" type="long" />

		<!-- Audit fields -->
		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Workflow fields -->
		<column name="status" type="int"/>
		<column name="statusByUserId" type="long"/>
		<column name="statusByUserName" type="String"/>
		<column name="statusDate" type="Date"/>

		<!-- Other fields -->
		<column name="name" type="String" />
		<column name="quantity" type="int" />

		<!-- Order -->
		<order by="asc">
			<order-column name="name" />
		</order>

		<!-- Finder methods -->
		<finder name="GroupIdAndStatus" return-type="Collection">
			<finder-column name="groupId"/>
			<finder-column name="status"/>
		</finder>
		<finder name="GroupId" return-type="Collection">
			<finder-column name="groupId"/>
		</finder>

		<!-- References -->
		<reference entity="AssetEntry" package-path="com.liferay.portlet.asset"/>
		<reference entity="AssetLink" package-path="com.liferay.portlet.asset"/>
		<reference entity="AssetTag" package-path="com.liferay.portlet.asset"/>
		<reference entity="Company" package-path="com.liferay.portal"/>
		<reference entity="SocialActivity" package-path="com.liferay.portlet.social"/>
		<reference entity="WorkflowInstanceLink" package-path="com.liferay.portal"/>
		<reference entity="ResourcePermission" package-path="com.liferay.portal"/>
		<reference entity="ResourceAction" package-path="com.liferay.portal"/>
		<reference entity="Role" package-path="com.liferay.portal"/>
	</entity>
	<exceptions>
		<exception>StockName</exception>
		<exception>StockQuantity</exception>
	</exceptions>
</service-builder>